@model MusicShop.Models.Music;

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="row">
<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MusicName" class="control-label"></label>
            <input asp-for="MusicName" class="form-control" />
            <span asp-validation-for="MusicName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ArtistName" class="control-label"></label>
            <input asp-for="ArtistName" class="form-control" />
            <span asp-validation-for="ArtistName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GenreId" class="control-label">Genre Name</label>
            <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genre">
                <option value=""> Select Genre</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
</div>